AC_SUBST([PACKAGE_BUGREPORT])
AC_SUBST([PRODUCT])
AC_SUBST([PRODUCT_NAME])
AC_SUBST([MAIN_KS])
AC_SUBST([VERSION])
AC_SUBST([RELEASE])


